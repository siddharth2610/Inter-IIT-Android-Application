<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:alpha="0.95"
        android:background="@drawable/p8"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageView"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/splash3"
                android:scaleType="fitStart"
                android:fitsSystemWindows="true"
                 />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_below="@+id/imageView"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/results"
                    android:background="@color/primary_500"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/imageView2"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RESULTS"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_marginLeft="43dp"
                        android:layout_marginStart="43dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fixtures"
                    android:background="@color/primary_500"
                    android:layout_below="@id/results"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/rules_img"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RULES"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/rules_img"
                        android:layout_toEndOf="@+id/rules_img"
                        android:layout_marginLeft="43dp"
                        android:layout_marginStart="43dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/standings"
                    android:layout_below="@id/fixtures"
                    android:background="@color/primary_500"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/standings_img"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STANDINGS"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/standings_img"
                        android:layout_toEndOf="@+id/standings_img"
                        android:layout_marginLeft="43dp"
                        android:layout_marginStart="43dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teams"
                    android:layout_below="@id/standings"
                    android:background="@color/primary_500"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/teams_img"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEAMS"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/teams_img"
                        android:layout_toEndOf="@+id/teams_img"
                        android:layout_marginLeft="43dp"
                        android:layout_marginStart="43dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/photos"
                    android:layout_below="@id/teams"
                    android:background="@color/primary_500"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/photos_img"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHOTOS"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:paddingTop="10dp"
                        android:layout_toRightOf="@+id/photos_img"
                        android:layout_toEndOf="@+id/photos_img"
                        android:layout_marginLeft="43dp"
                        android:layout_marginStart="43dp" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>